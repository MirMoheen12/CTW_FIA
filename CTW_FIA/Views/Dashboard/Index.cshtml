                            callback: function (value) {
                                if (value === this.max) {
                                    return value + ' (' + this.getLabelForValue(value) + ')'; // Display the count of the highest bar
                                } else {
                                    return value;
                                }
                            }
                        }
                    },
                    x: {
                        stacked: true
                    }
                },
                plugins: {
                    legend: {
                        display: false // Remove the legend
                    },
                    datalabels: {
                        anchor: 'end',
                        align: 'end',
