                    });
                   
                   
    
                    const ctx_terroristprovinces = document.getElementById('barChart1');

               

                            const barChart1 = new Chart(ctx_terroristprovinces, {
                                type: 'bar',
                                data: {
                                    labels: provincet,
                                    datasets: [{
                                        label: '# of Terrorists Order By Provinces',
                                        data: count_provincet,
                                        backgroundColor: c_background_colors,
                                        borderColor: c_background_colors,
                                        borderWidth: 2,


                                    }]
                                },
                                options: c_options
                            });
             
                },
                error: function (response) {
                    alert("error");
