                   const province=[];
                    const count_province=[];
                    const type = []

                    const count_type =[];

                    var provincet = [];
                    var count_provincet = [];
                    var provinegroup = [];
                    var count_provincegroupt = [];
                    for (let j = 0; j < response.graphDtos.length; j++) {
                        if (response.graphDtos[j].tablename == "provincewise")
                        {
                           // alert(j);
                           province.push(response.graphDtos[j].name);
                           count_province.push(response.graphDtos[j].totalRecord);
                        }
                        if (response.graphDtos[j].tablename == "Exwise") {
                            // alert(j);
                            type.push(response.graphDtos[j].name);
                            count_type.push(response.graphDtos[j].totalRecord);
                        }
                        if (response.graphDtos[j].tablename == "pprovince") {
                            // alert(j);
                            provincet.push(response.graphDtos[j].name);
                            count_provincet.push(response.graphDtos[j].totalRecord);
                        }
                        if (response.graphDtos[j].tablename == "Groupwise") {
                            // alert(j);
                            provinegroup.push(response.graphDtos[j].name);
                            count_provincegroupt.push(response.graphDtos[j].totalRecord);
