                    }




               


                   console.log(province);
                    console.log(count_province);
                    const myChart = new Chart(ctx_provinces, {
                        type: 'bar',

                        data: {
                            labels: province,
                            datasets: [{
                                label: '',
                                data: count_province,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,
                                borderWidth: 1

                            }
                            ]
                        },
                        options: c_options

                    });


                    //Explosive

                    const ctx_explosives = document.getElementById('barChart2');

                    const barChart2 = new Chart(ctx_explosives, {
                        type: 'bar',
                        data: {
                            labels: type,
                            datasets: [{
                                label: '# of Explosives Order by Types',
                                data: count_type,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,
                                borderWidth: 1

                            }]
                        },
                        options: c_options
                    });
                    

                    
                    ///Grouwise
                    
                    const ctx_groupprovinces = document.getElementById('pieChart');
              
                    const pieChart = new Chart(ctx_groupprovinces, {
                        type: 'pie',
                        data: {
                            labels: provinegroup,
                            datasets: [{
                                label: '# of Groups Order by Province',
                                data: count_provincegroupt,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,
                                borderWidth: 1

                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    ticks: {
                                        // Include a dollar sign in the ticks

                                        fixedStepSize: 1
                                    }
                                }
                            },
                            legend: {
                                labels: {
                                    // This more specific font property overrides the global property
                                    font: {
                                        size: 22
                                    }
                                }
                            },
                            tooltips: {
                                enabled: false
                            },
                            plugins: {
                                datalabels: {
                                    anchor: 'end',
                                    align: 'end',
