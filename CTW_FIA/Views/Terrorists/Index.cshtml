@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{

}

    <div class="row no-gutters">
            <div class="col-md-12"><h2 class="font-weight-normal text-center">Terrorists Analysis – Graph </h2></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="font-weight-normal text-center">Terrorist Province Wise</h6>
                    <canvas id="tprovinceChart" style="position: relative; height:60vh; width:80vw"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="font-weight-normal text-center">Head Headmoney</h6>
                    <canvas id="headmoneyChart" style="position: relative; height:60vh; width:80vw"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="row no-gutters">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="font-weight-normal text-center">Accusation Status Wise</h6>
                    <canvas id="accusationChart" style="position: relative; height:40vh; width:80vw"></canvas>
                </div>
            </div>
        </div>
    </div>
  @section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            const ctx_accusation = document.getElementById('accusationChart');
            const ctx_headmoney = document.getElementById('headmoneyChart');
            Chart.register(ChartDataLabels);
            Chart.defaults.set('plugins.datalabels', {
                color: '#000000'
            });
            const c_options = {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        grace: '70%',
                        ticks: {
                            callback: function (value) {
                                if (value === this.max) {
                                    return value + ' (' + this.getLabelForValue(value) + ')'; // Display the count of the highest bar
                                } else {
                                    return value;
                                }
                            }
                        }
                    },
                    x: {
                        stacked: true
                    }
                },
                plugins: {
                    legend: {
                        display: false // Remove the legend
                    },
                    datalabels: {
                        anchor: 'end',
                        align: 'end',
                        labels: {
                            value: {
                                color: 'black'
                            },
                            font: {
                                size: 22
                            }
                        }
                    }
                }
            };




            const c_background_colors =
                [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235,1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192,1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64,1)',
                    'rgba(9, 113, 7, 0.94)',
                    'rgba(10, 73, 231, 0.94)',
                    'rgba(73, 49, 226, 1)',
                    'rgba(138, 38, 64, 1)',

                ];

            $.ajax({
                type: "GET",
                url: "/Terrorists/Getdashboard",
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (response) {
                    console.log(response);
                    const province = [];

                    const count_province = [];

                    const headmoney = [];

                    const count_headmoney = [];
                    const asname = [];

                    const asrecord = [];

                    for (let j = 0; j < response.length; j++) {
                        if (response[j].tablename == "TP") {
                            // alert(j);
                            province.push(response[j].name);
                            count_province.push(response[j].totalRecord);
                        }
                        if (response[j].tablename == "HM") {
                            // alert(j);
                            headmoney.push(response[j].name);
                            count_headmoney.push(response[j].totalRecord);
                        }
                        if (response[j].tablename == "AS") {
                            // alert(j);
                            asname.push(response[j].name);
                            asrecord.push(response[j].totalRecord);
                        }
                    }


                          const ctx_terroristprovinces = document.getElementById('tprovinceChart');



                    const barChart1 = new Chart(ctx_terroristprovinces, {
                        type: 'bar',
                        data: {
                            labels: province,
                            datasets: [{
                                label: 'abc',
                                data: count_province,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,   
                                borderWidth: 2,


                            }]
                        },
                        options: c_options
                    });
          

                    //console.log(accusation);
                    //console.log(count_accusation);
                    //console.log(headmoney);
                    //console.log(count_headmoney);

                  

                    const myChart_headmoney = new Chart(ctx_headmoney, {
                        type: 'bar',
                        data: {
                            labels: headmoney,
                            datasets: [{
                                label: '# of Terrorist Order by Head Money',
                                data: count_headmoney,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,
                                borderWidth: 2

                            }]
                        },
                        options: c_options
                    });

                    console.log(asrecord);
                    const myChart_accuation = new Chart(ctx_accusation, {
                        type: 'bar',
                        data: {
                            labels: asname,
                            datasets: [{
                                label: '# of Terrorist Order by Accusation',
                                data: asrecord,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,
                                borderWidth: 2

                            }]
                        },
                        options: c_options
                    });
                },
                error: function (response) {
                    alert("error");
                }
            });
        });

    </script>
}
