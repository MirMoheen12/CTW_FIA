   @section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            const ctx_explosives = document.getElementById('explosiveChart');
            const Secchart = document.getElementById('secchart');
            
            Chart.register(ChartDataLabels);
            Chart.defaults.set('plugins.datalabels', {
                color: '#000000'
            });
          
            const c_background_colors =
                [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235,1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192,1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64,1)',
                    'rgba(9, 113, 7, 0.94)',
                    'rgba(10, 73, 231, 0.94)',
                    'rgba(73, 49, 226, 1)',
                    'rgba(138, 38, 64, 1)',

                ];
  
            $.ajax({
                type: "GET",
                url: "/Explosives/Getdashboard",
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (response) {
                    const type = [];

                    const count_type = []
                    const type2 = [];

                    const count_type2 = []
                    for (let j = 0; j < response.length; j++) 
                    {
                        if (response[j].tablename == "Exp") {
                            // alert(j);
                            type.push(response[j].name);
                            count_type.push(response[j].totalRecord);
                        }
                        if (response[j].tablename == "Sec") {
                            // alert(j);
                            type2.push(response[j].name);
                            count_type2.push(response[j].totalRecord);
                        }
              
                    }
                    console.log(type);
                    const myChart2 = new Chart(Secchart, {
                        type: 'bar',
                        data: {
                            labels: type2,
                            datasets: [{
                                label: '# Explosive Report Type Wise',
                                data: count_type2,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,
                                borderWidth: 2

                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {

                                y: {

                                    ticks: {
                                        // Include a dollar sign in the ticks

                                        fixedStepSize: 1
                                    }
                                }
                            },
                            legend: {
                                labels: {
                                    // This more specific font property overrides the global property
                                    font: {
                                        size: 22
                                    }
                                }
                            },
                            tooltips: {
                                enabled: false
                            },
                            plugins: {
                                datalabels: {
                                    anchor: 'end',
                                    align: 'end',
                                    labels: {
                                        value: {
                                            color: 'black'
                                        },
                                        font: {
                                            size: 22
                                        }
                                    }
                                }
                            }
                        }
                    });

                    const myChart = new Chart(ctx_explosives, {
                        type: 'bar',
                        data: {
                            labels: type,
                            datasets: [{
                                label: '# of Incidents Order By Provinces',
                                data: count_type,
                                backgroundColor: c_background_colors,
                                borderColor: c_background_colors,
                                borderWidth: 2

                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                    
                                y: {
                                      
                                    ticks: {
                                        // Include a dollar sign in the ticks

                                        fixedStepSize: 1
                                    }
                                }
                            },
                            legend: {
                                labels: {
                                    // This more specific font property overrides the global property
                                    font: {
                                        size: 22
                                    }
                                }
                            },
                            tooltips: {
                                enabled: false
                            },
                            plugins: {
                                datalabels: {
                                    anchor: 'end',
                                    align: 'end',
                                    labels: {
                                        value: {
                                            color: 'black'
                                        },
                                        font: {
                                            size: 22
                                        }
                                    }
                                }
                            }
                        }
                    });

                    //alert(arr);
                },
                error: function (response) {
                    alert("error");
                }
            });
        });
        </script>
}


