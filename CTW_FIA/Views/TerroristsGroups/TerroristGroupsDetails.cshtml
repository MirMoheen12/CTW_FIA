@model CTW_FIA.Models.Dto.QuickSearchGroups_sel_Result
@{
    ViewData["Title"] = "Incident";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table-responsive {
        max-height: 650px;
    }
</style>

<div class="row no-gutters">


    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @*    <h4 class="card-title"> Incident</h4>*@

                <form class="forms-sample">
                    <div class="form-row text-dark">

                        @* <label class="col-form-label">Enter STRURN</label>
                        <div class="col-sm-4">
                        <input type="text" placeholder="Search..." name="search" id="textStrurnid">
                        <button type="button" onclick="ViewIncident()"><i class="fa fa-search"></i></button>
                        </div>*@
                        <div class="col-sm-9">
                            <button type="button" id="addMedia" class="btn btn-primary btn-md">Add Media</button>
                            <button type="button" id="editIncident" class="btn btn-primary btn-md">Edit Record</button>
                            <button type="button" id="deleteIncident" class="btn btn-primary btn-md">Delete Record</button>
                            <button type="button" id="linkRecord" class="btn btn-primary btn-md">Link Record</button>
                            <input type="button" class="btn btn-primary btn-md" id="btnExport" value="To PDF" onclick="Export()" />
                            <button id="csv" onclick="tableToCSV()" class="btn btn-primary btn-md">To CSV</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9 grid-margin stretch-card">
        <div class="card ">

            <div id="exptopdf" class="pdfpage" style="background: #FFFFFF;">

                <div class="d-flex p-2 bg-gradient-primary justify-content-center"><b>Terrorist Group Details</b></div>

                <!--Row with two columns divided in 1:3 ratio-->

                <table class="table table-borderless text-dark" id="IncidentPreTable">

                    <tbody id="Incidenttbody">
                        @* <tr id="strURNcolid">
                        <td class="col-md-4" style="text-align: right; vertical-align: middle;">strURN: </td>
                        <td id="strURNid" class="col-md-8"></td>
                        </tr>*@

                        <tr id="strOperationNamecolid">
                            <td class="col-md-4" style="text-align: right; vertical-align: middle;">Print Date: </td>
                            <td id="strOperationNameId">@DateTime.Now.ToShortDateString()</td>
                        </tr>
                        <tr id="FirNocolid">
                            <td style="text-align: right; vertical-align: middle;">Print Date:</td>
                            <td id="FirNoid">@DateTime.Now</td>
                        </tr>
                        <tr id="RegYearcolid">
                            <td style="text-align: right; vertical-align: middle;">Reference ID:</td>
                            <td id="RegYearid">@Model.strURN</td>
                        </tr>
                        <tr id="UScolid">
                            <td style="text-align: right; vertical-align: middle;">Group Name:</td>
                            <td id="US id">@Model.dgvGroupName</td>
                        </tr>
                        <tr id="Countrycolid">
                            <td style="text-align: right; vertical-align: middle;">Category:</td>
                            <td id="Countryid">@Model.SubCategory</td>
                        </tr>
                        <tr id="Provincecolid">
                            <td style="text-align: right; vertical-align: middle;">Group Reporting Agency:</td>
                            <td id="Provinceid">@Model.GroupReportingAgency</td>
                        </tr>
                        <tr id="Citycolid">
                            <td style="text-align: right; vertical-align: middle;">Year of Establish:</td>
                            <td id="Cityid">@Model.DateEstablished</td>
                        </tr>

                        <tr id="Districtcolid">
                            <td style="text-align: right; vertical-align: middle;">Head Name:</td>
                            <td id="Districtid">@Model.HeadName</td>
                        </tr>
                        <tr id="PostalZipcolid">
                            <td style="text-align: right; vertical-align: middle;">Strength:</td>
                            <td id="PostalZipid">@Model.Strength</td>
                        </tr>
                        <tr id="PoliceStationcolid">
                            <td style="text-align: right; vertical-align: middle;">Area:</td>
                            <td id="PoliceStationid">@Model.Area</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;">Goal:</td>
                            <td id="Addressid">@Model.MemGoals</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;">Country Origin:</td>
                            <td id="Addressid">@Model.dgvCountryOrigin</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;">Country:</td>
                            <td id="Addressid">@Model.dgvCountry</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;">Province:</td>
                            <td id="Addressid">@Model.dgvProvince</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;"> District:</td>
                            <td id="Addressid">@Model.District</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;">City:</td>
                            <td id="Addressid">@Model.City</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;">Postal Zip:</td>
                            <td id="Addressid">@Model.PostalZip</td>
                        </tr>
                        <tr id="Addresscolid">
                            <td style="text-align: right; vertical-align: middle;">Address :</td>
                            <td id="Addressid">@Model.Address</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @Html.Partial("DisplayLinksRecord")
</div>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/dataTables.buttons.min.js"></script>
<script type="text/javascript">
    $("#SearchGenericTable").DataTable({

        "responsive": true, "lengthChange": false, "autoWidth": false,
        "buttons": ["copy", "csv", "excel", "pdf", "print"]
    }).buttons().container().appendTo('#SearchGenericTable_wrapper .col-md-6:eq(0)');

</script>
