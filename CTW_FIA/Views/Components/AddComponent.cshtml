@model CTW_FIA.Models.DatabaseModels.Components
@{
    Layout = null;
}

<div class="row no-gutters">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h5>Components Form</h5>

                <form class="forms-sample" method="post" asp-action="AddComponent" asp-controller="Components">
                    <fieldset class="border p-3">
                        <legend class="float-none w-auto p-2" style="font-size: 12px">
                            Components Details
                        </legend>
                        <div class="form-group row">
                            <label for="Type" class="col-sm-2 col-form-label" style="font-size: 12px">Type</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Type" asp-for="Type" placeholder="" />
                            </div>
                            <label for="CountryOrigin" class="col-sm-2 col-form-label" style="font-size: 13px">Country of Origin</label>
                            <div class="col-sm-4">
                                <select id="CountryOrigin" asp-for="CountryOrigin" class="form-control">
                                    @for (var i = 0; i < ViewBag.Allcountries.Count; i++)
                                    {
                                        <option value="@ViewBag.Allcountries[i].strCountry">@ViewBag.Allcountries[i].strCountry</option>
                                    }

                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Material" class="col-sm-2 col-form-label" style="font-size: 13px">Material</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Material" asp-for="Material" placeholder="" />
                            </div>

                            <label for="Manufacturer" class="col-sm-2 col-form-label" style="font-size: 13px">Manufacturer</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Manufacturer" asp-for="Manufacturer" placeholder="" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Description" class="col-sm-2 col-form-label" style="font-size: 13px">Description</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Description" asp-for="Description" placeholder="" />
                            </div>
                            <label for="MethodDelivery" class="col-sm-2 col-form-label" style="font-size: 13px">Method of Delivery</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="MethodDelivery" asp-for="MethodDelivery" placeholder="" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="QuantityWeight" class="col-sm-2 col-form-label" style="font-size: 13px">Quantity Weight</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="QuantityWeight" asp-for="QuantityWeight" placeholder="" />
                            </div>
                            <label for="QuantityNo" class="col-sm-2 col-form-label" style="font-size: 13px">Quantity Number</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="QuantityNo" asp-for="QuantityNo" placeholder="" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="CountryRecovered" class="col-sm-2 col-form-label" style="font-size: 13px">Country of Recovery</label>
                            <div class="col-sm-4">
                                <select id="CountryRecovered" asp-for="CountryRecovered" class="form-control">

                                    @for (var i = 0; i < ViewBag.Allcountries.Count; i++)
                                    {
                                        <option value="@ViewBag.Allcountries[i].strCountry">@ViewBag.Allcountries[i].strCountry</option>
                                    }

                                </select>
                            </div>
                            <label for="Length" class="col-sm-2 col-form-label" style="font-size: 13px">Length</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Length" asp-for="Length" placeholder="" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Width" class="col-sm-2 col-form-label" style="font-size: 13px">Width</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Width" asp-for="Width" placeholder="" />
                            </div>
                            <label for="Height" class="col-sm-2 col-form-label" style="font-size: 13px">Height</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Height" asp-for="Height" placeholder="" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Diameter" class="col-sm-2 col-form-label" style="font-size: 13px">Diameter</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Diameter" asp-for="Diameter" placeholder="" />
                            </div>
                            <label for="Colour" class="col-sm-2 col-form-label" style="font-size: 13px">Color</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Colour" asp-for="Colour" placeholder="" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Markings" class="col-sm-2 col-form-label" style="font-size: 13px">Markings</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Markings" asp-for="Markings" placeholder="" />
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="border p-3">
                        <br />
                        <div class="form-group row">
                            <label for="memRemarks" class="col-sm-2 col-form-label" style="font-size: 13px">Remarks</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="memRemarks" asp-for="memRemarks" rows="4"></textarea>
                            </div>
                        </div>
                    </fieldset>
                    <br />
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
