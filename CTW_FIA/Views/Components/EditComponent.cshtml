@model CTW_FIA.Models.Dto.QuickSearchComponents_sel_Result
<div class="row no-gutters">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h5>Components Form</h5>

                <form class="forms-sample" method="post" asp-action="EditComponent" asp-controller="Components">
                    <fieldset class="border p-3">
                        <legend class="float-none w-auto p-2" style="font-size: 12px">
                            Components Details
                        </legend>
                        <div class="form-group row">
                            <label for="Type" class="col-sm-2 col-form-label" style="font-size: 12px">Type</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Type" name="Type" asp-for="Type" />
                                <input type="text" hidden class="form-control" id="strURN" name="strURN" asp-for="strURN" />
                            </div>
                            <label for="CountryOrigin" class="col-sm-2 col-form-label" style="font-size: 13px">Country of Origin</label>
                            <div class="col-sm-4">
                                <select id="CountryOrigin" name="CountryOrigin" asp-for="CountryOrigin" class="form-control">
                                    @for (var i = 0; i < ViewBag.Allcountries.Count; i++)
                                    {
                                        <option value="@ViewBag.Allcountries[i].strCountry">@ViewBag.Allcountries[i].strCountry</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Material" class="col-sm-2 col-form-label" style="font-size: 13px">Material</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Material" name="Material" asp-for="Material" />
                            </div>
                            <label for="Manufacturer" class="col-sm-2 col-form-label" style="font-size: 13px">Manufacturer</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Manufacturer" name="Manufacturer" asp-for="Manufacturer" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Description" class="col-sm-2 col-form-label" style="font-size: 13px">Description</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Description" name="Description" asp-for="Description" />
                            </div>
                            <label for="MethodDelivery" class="col-sm-2 col-form-label" style="font-size: 13px">Method of Delivery</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="MethodDelivery" name="MethodDelivery" asp-for="MethodDelivery" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="QuantityWeight" class="col-sm-2 col-form-label" style="font-size: 13px">Quantity Weight</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="QuantityWeight" name="QuantityWeight" asp-for="QuantityWeight" />
                            </div>
                            <label for="QuantityNo" class="col-sm-2 col-form-label" style="font-size: 13px">Quantity Number</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="QuantityNo" name="QuantityNo" asp-for="QuantityNo" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="CountryRecovered" class="col-sm-2 col-form-label" style="font-size: 13px">Country of Recovery</label>
                            <div class="col-sm-4">
                                <select id="CountryRecovered" name="CountryRecovered" asp-for="CountryRecovered" class="form-control">
                                    @for (var i = 0; i < ViewBag.Allcountries.Count; i++)
                                    {
                                        <option value="@ViewBag.Allcountries[i].strCountry">@ViewBag.Allcountries[i].strCountry</option>
                                    }
                                </select>
                            </div>
                            <label for="Length" class="col-sm-2 col-form-label" style="font-size: 13px">Length</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Length" name="Length" asp-for="Length" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Width" class="col-sm-2 col-form-label" style="font-size: 13px">Width</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Width" name="Width" asp-for="Width" />
                            </div>
                            <label for="Height" class="col-sm-2 col-form-label" style="font-size: 13px">Height</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Height" name="Height" asp-for="Height" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Diameter" class="col-sm-2 col-form-label" style="font-size: 13px">Diameter</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Diameter" name="Diameter" asp-for="Diameter" />
                            </div>
                            <label for="Colour" class="col-sm-2 col-form-label" style="font-size: 13px">Color</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Colour" name="Colour" asp-for="Colour" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="Markings" class="col-sm-2 col-form-label" style="font-size: 13px">Markings</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="Markings" name="Markings" asp-for="Markings" />
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="border p-3">
                        <br />
                        <div class="form-group row">
                            <label for="memRemarks" class="col-sm-2 col-form-label" style="font-size: 13px">Remarks</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="memRemarks" name="memRemarks" rows="4" asp-for="memRemarks"></textarea>
                            </div>
                        </div>
                    </fieldset>
                    <br />
                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>